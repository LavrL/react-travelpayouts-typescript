{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./build/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",

    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "files": [
    "custom.d.ts"
  ],
  "include": [
    "./src/**/*"
  ]
}