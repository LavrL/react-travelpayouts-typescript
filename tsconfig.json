{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": false,
    "outDir": "./build/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",

    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./Types",
      "./node_modules/@types"
    ]
  },
  "files": [
    "custom.d.ts"
  ],

  "include": [
    "./src/**/*"
  ]
}